<Secondscreen>:
	MDScreen:
		MDBoxLayout:
			orientation: 'vertical'
			md_bg_color:"red"
			MDLabel:
				text:"Second Page"
				font_size:40
				pos_hint: {'center_y': 1}
				halign:"center"
				color:"white"
				bold:True
			MDLabel:
				text:"this is Second Page"
				font_size:40
				pos_hint: {'center_y': 1}
				halign:"center"
				color:"white"
				bold:True

			# CREATE BUTTON
			MDBoxLayout:
				orientation:"vertical"
				spacing:20
				md_bg_color:"green"
				MDRaisedButton:
					text:"go to screen 1 with ripple effect"
					md_bg_color:"blue"
					on_release:root.RippleEffect()
					pos_hint:{"center_y":2,"center_x":.5}
				MDRaisedButton:
					text:"go to screen 1 with blur effect"
					md_bg_color:"blue"
					on_release:root.BlurEffect()
					pos_hint:{"center_y":2,"center_x":.5}
				MDRaisedButton:
					text:"go to screen 1 with RVB effect"
					md_bg_color:"blue"
					on_release:root.RVBEffect()
					pos_hint:{"center_y":2,"center_x":.5}
					
				MDRaisedButton:
					text:"go to screen 1 with Pixel effect"
					md_bg_color:"blue"
					on_release:root.PixelEffect()
					pos_hint:{"center_y":2,"center_x":.5}
					
				